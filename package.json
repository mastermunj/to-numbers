{
  "name": "to-numbers",
  "version": "0.0.1",
  "description": "Converts words (including decimal points) into numbers & currency. The reverse of to-words.",
  "keywords": [
    "to numbers",
    "words to numbers",
    "words-to-numbers",
    "words to numbers currency",
    "international words to numbers",
    "international words to numbers currency",
    "convert-words",
    "i18n",
    "converter",
    "number",
    "word",
    "currency",
    "parse"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mastermunj/to-numbers.git"
  },
  "license": "MIT",
  "author": "Munjal Dhamecha",
  "main": "dist/ToNumbers.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "npm run clean && tsc --noEmitOnError",
    "build:watch": "npm run build -- --watch",
    "clean": "rimraf dist coverage",
    "commit": "git-cz",
    "lint": "eslint --max-warnings=0 .",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky",
    "release": "standard-version",
    "release:mock": "npm run release -- --dry-run",
    "test": "vitest",
    "test:watch": "npm run test -- --watch"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/lodash": "^4.17.23",
    "@types/node": "^25.0.10",
    "@types/source-map-support": "^0.5.10",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-v8": "^4.0.17",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "lodash": "^4.17.23",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "sort-package-json": "^3.6.0",
    "source-map-support": "^0.5.21",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
